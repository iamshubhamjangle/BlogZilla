<%- include ('partials/header')%>


<div class="ui main text container segment">
	<div class="ui huge header">Editing: <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Title</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
		</div>
		<input class="ui blue big basic button" type="submit" name="submit">
	</form>
</div>


<%- include ('partials/footer')%>
